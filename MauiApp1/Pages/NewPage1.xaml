<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.NewPage1"
             Title="Авторы">

    <ScrollView>
        <VerticalStackLayout>
            <!--хз как назвать-->
            <Label Text="Имя" />
            <Entry  x:Name="Name"/>
            <Label Text="Фамилия"/>
            <Entry x:Name="SecondName" />
            <Label Text="Отчество"/>
            <Entry x:Name="ThirtyName" />
            <Label Text="День рождения"/>
            <DatePicker x:Name="BirthDayText"/>
            <Label Text="Оценочка"/>
            <Label  x:Name="numberStepper" Text="0"/>
            <Stepper Maximum="5" Minimum="0" Increment="0.1"  ValueChanged="OnStepperValueChanged" x:Name="StepperSelect" />
            <Label Text="Пол" />
            <Picker x:Name="gender" ItemsSource="{Binding Genres}" />
            <Label Text="Духовное состояние"/>
            <Switch x:Name="LiveOrDie"/>



            <!--Кнопочки-->
            <Button  Text="Сохранить" Clicked="Button_Clicked_Author"/>
            <Button  Text="Home"  Clicked="Button_Clicked_Home"/>
            <Button  Text="Изменить" Clicked="OnChangeClicked"/>
            <Button Text="Удалить" Clicked="OnDeleteClicked"/>


            <!--Табличка-->
            <CarouselView x:Name="Tablicka" CurrentItem="{Binding SelectedAuthor}" ItemsSource="{Binding AuthorTablichkaUpdate}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Frame BackgroundColor="White"
                        BorderColor="LightGray"
                        CornerRadius="10"
                        HasShadow="True"
                        Padding="15">
                                <StackLayout>
                                    <Label Text="ID:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label Text="{Binding Id}" Margin="10,0,0,0" TextColor="Black"/>


                                    <Label Text="Название:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label Text="{Binding Name}" Margin="10,0,0,0" TextColor="Black"/>


                                    <Label  Text="Фамилия:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label  Text="{Binding SecondName}" Margin="10,0,0,0" TextColor="Black"/>


                                    <Label  Text="Отчество:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label   Text="{Binding ThrityName}" Margin="10,0,0,0" TextColor="Black"/>

                                    <Label Grid.Column="0" Text="Дата:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label Grid.Column="0" Text="{Binding BirthDay, StringFormat='{0:dd.MM.yyyy}'}" Margin="10,0,0,0" TextColor="Black"/>

                                    <Label  Text="Пол:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label   Text="{Binding Gender}" Margin="10,0,0,0" TextColor="Black"/>

                                    <Label  Text="Оценка:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label   Text="{Binding Ocenochka}" Margin="10,0,0,0" TextColor="Black"/>

                                    <Label  Text="Жив Или Нет:" FontAttributes="Bold" TextColor="Black"/>
                                    <Label   Text="{Binding IsAlive}" Margin="10,0,0,0" TextColor="Black"/>


                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>