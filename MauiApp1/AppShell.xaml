<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:MauiApp1.Pages"
             x:Class="MauiApp1.AppShell"
             Title="AppShell">
    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout>
                <Button Text="Выйти" Clicked="Clouse"/>
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>
    
    
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="Страницы" FontSize="25"/>
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>


    <Tab Route="TydaNado"  Shell.BackgroundColor="Orange" Shell.ForegroundColor="Black" Shell.FlyoutHeight="200" >
        <ShellContent Route="Sign" ContentTemplate="{DataTemplate local:SignPage}"  />
        <ShellContent Route="Reg" ContentTemplate="{DataTemplate local:RegisterPage}" />
    </Tab>


    <FlyoutItem Title="Основное" Route="BaseMain">
        <Tab Title="Фильмы" Shell.BackgroundColor="Green" Shell.ForegroundColor="White" Shell.FlyoutHeight="500">
            <ShellContent Title="Фильмы" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Авторы">
            <ShellContent Title="Авторы" ContentTemplate="{DataTemplate local:NewPage1}" Route="NewPage1" />
        </Tab>
    </FlyoutItem>


    <FlyoutItem Title="Связь">
        <Tab Title="Связь"  Shell.BackgroundColor="Blue" Shell.ForegroundColor="Pink" Shell.FlyoutHeight="500">
            <ShellContent Title="Страница 2" ContentTemplate="{DataTemplate local:NewPage2}" Route="NewPage2" />
        </Tab>
    </FlyoutItem>

   
   

</Shell>