<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:MauiApp1.Pages"
             x:Class="MauiApp1.AppShell"
             Title="AppShell">
    
    <TabBar>
        <Tab Title="Авторизация" >
            <ShellContent Route="Sign" ContentTemplate="{DataTemplate local:SignPage}" />
        </Tab>
        <Tab Title="Регаемся" >
            <ShellContent Route="Reg" ContentTemplate="{DataTemplate local:RegisterPage}" />
        </Tab>


    </TabBar>


    <FlyoutItem Title="Основное" Route="BaseMain">
        <Tab Title="Фильмы">
            <ShellContent Title="Фильмы" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Авторы">
            <ShellContent Title="Авторы" ContentTemplate="{DataTemplate local:NewPage1}" Route="NewPage1" />
        </Tab>
    </FlyoutItem>


    <FlyoutItem Title="Связь">
        <Tab Title="Связь">
            <ShellContent Title="Страница 2" ContentTemplate="{DataTemplate local:NewPage2}" Route="NewPage2" />
        </Tab>
    </FlyoutItem>

   
   

</Shell>